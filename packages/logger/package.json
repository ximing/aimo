{
  "name": "@aimo/logger",
  "version": "0.1.0",
  "description": "AIMO Node.js 服务端日志库",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "scripts": {
    "build": "tsx build.config.ts",
    "dev": "tsx build.config.ts --watch",
    "clean": "rm -rf lib build dist coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "logger",
    "logging",
    "osg",
    "node.js"
  ],
  "author": "OSG Frontend Engineering",
  "license": "MIT",
  "dependencies": {
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@aimo/eslint-config": "workspace:*",
    "@aimo/typescript-config": "workspace:*",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/winston": "^2.4.4",
    "esbuild": "^0.19.12",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.1.3"
  },
  "files": [
    "lib/**/*",
    "build/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "registry": "https://r.npm.sankuai.com",
    "access": "public"
  }
}
